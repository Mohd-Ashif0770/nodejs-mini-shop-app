<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    />
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js
"></script>
    <title>Admin Profile</title>
  </head>
  <body>
    <div class="container mt-4">   

      <h4>Add New Product</h4>
      <form action="/products" method="post" class="mt-3"  novalidate class="needs-validation">
        <input type="text" placeholder="enter name" class="form-control" required name="name"><br>
        <textarea type="text" class="form-control" name="description" placeholder="enter description" required ></textarea><br>
        <!-- <input type="file" name="image" class="form-control"><br> -->
        <input type="number" placeholder="enter price" class="form-control" required name="price"><br>
        <input type="text" placeholder="enter categroy" class="form-control" required name="category"><br>
        <input type="text" placeholder="enter image link" class="form-control" required name="image"><br>
        <button class="btn btn-success">Add</button>
      </form>
    </div>

    <script src="/js/formValidation.js"></script>
  </body>
</html>