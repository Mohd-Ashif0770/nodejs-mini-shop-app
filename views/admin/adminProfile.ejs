<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard | Product Management</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

    <style>
      body {
        background-color: #f8f9fa;
      }

      .card:hover {
        transform: translateY(-3px);
        transition: 0.2s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      }

      .navbar-brand {
        font-weight: 700;
        color: #0d6efd !important;
      }

      .summary-card {
        transition: 0.2s ease;
      }

      .summary-card:hover {
        transform: scale(1.03);
      }
    </style>
  </head>

  <body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top mb-4">
      <div class="container">
        <a class="navbar-brand" href="/admin/dashboard">
          <i class="fa-solid fa-user-shield me-2"></i> Admin Panel
        </a>
        <div class="d-flex gap-2">
          <a href="/shop" class="btn btn-outline-secondary rounded-pill">
            <i class="fa-solid fa-store me-1"></i> View Shop
          </a>
          <a href="/admin/logout" class="btn btn-danger rounded-pill">
            <i class="fa-solid fa-right-from-bracket me-1"></i> Logout
          </a>
        </div>
      </div>
    </nav>

    <div class="container pb-5">
      <!-- Dashboard Header -->
      <div class="bg-white p-4 rounded-4 shadow-sm mb-5">
        <div
          class="d-flex flex-column flex-md-row justify-content-between align-items-md-center"
        >
          <div>
            <h1 class="fw-bold text-primary mb-1">
              üìä Admin Dashboard
            </h1>
            <p class="text-muted mb-0">
              Manage and update your product catalog efficiently.
            </p>
          </div>

          <div class="mt-3 mt-md-0 d-flex gap-2">
            <a
              href="/products/new"
              class="btn btn-warning rounded-pill shadow-sm"
            >
              ‚ûï Add Product
            </a>
            <button
              class="btn btn-outline-primary rounded-pill shadow-sm"
              data-bs-toggle="collapse"
              data-bs-target="#filterOptions"
            >
              üîç Filter
            </button>
          </div>
        </div>
      </div>

      <!-- Filter Section -->
      <div id="filterOptions" class="collapse mb-4">
        <div class="card card-body shadow-sm border-0 rounded-4">
          <form
            action="/admin/dashboard"
            method="get"
            class="row g-3 align-items-end"
          >
            <div class="col-md-4">
              <label class="form-label fw-semibold">Category</label>
              <select class="form-select" name="category">
                <option value="">All Categories</option>
                <option value="Electronics">Electronics</option>
                <option value="Fashion">Fashion</option>
                <option value="Home">Home</option>
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label fw-semibold">Price Range</label>
              <select class="form-select" name="priceRange">
                <option value="">All</option>
                <option value="low">Below ‚Çπ500</option>
                <option value="mid">‚Çπ500 - ‚Çπ2000</option>
                <option value="high">Above ‚Çπ2000</option>
              </select>
            </div>
            <div class="col-md-4 d-grid">
              <button class="btn btn-primary rounded-pill">Apply Filter</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Summary Cards -->
      <!-- <div class="row mb-5 text-center">
        <div class="col-md-4 mb-3">
          <div class="card summary-card border-0 shadow-sm p-3 rounded-4">
            <h6 class="text-muted mb-1">Total Products</h6>
            <h3 class="fw-bold text-primary"><%= products.length %></h3>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="card summary-card border-0 shadow-sm p-3 rounded-4">
            <h6 class="text-muted mb-1">Active Categories</h6>
            <h3 class="fw-bold text-success">5</h3>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="card summary-card border-0 shadow-sm p-3 rounded-4">
            <h6 class="text-muted mb-1">Low Stock Alerts</h6>
            <h3 class="fw-bold text-danger">2</h3>
          </div>
        </div>
      </div> -->

      <!-- Product Grid -->
      <div class="row g-4">
        <% for(let product of products){ %>
        <div class="col-12 col-md-6 col-lg-4 d-flex">
          <div class="card shadow-sm border-0 rounded-4 w-100">
            <div class="ratio ratio-16x9">
              <img
                src="<%= product.image %>"
                class="card-img-top rounded-top-4"
                alt="Product Image"
                style="object-fit: cover;"
              />
            </div>

            <div class="card-body d-flex flex-column">
              <div
                class="d-flex justify-content-between align-items-center mb-2"
              >
                <h5 class="card-title fw-semibold text-dark mb-0">
                  <%= product.name %>
                </h5>
                <span
                  class="badge bg-secondary-subtle text-secondary border border-secondary"
                >
                  <%= product.category || "General" %>
                </span>
              </div>

              <p class="card-text text-muted small flex-grow-1 mb-3">
                <%= product.description.length > 100
                  ? product.description.substring(0,150) + "..."
                  : product.description %>
              </p>

              <div
                class="d-flex align-items-center justify-content-between mb-3 p-2 rounded bg-light border"
              >
                <span class="fw-bold text-success fs-5">
                  ‚Çπ<%= product.price.toLocaleString() %>
                </span>
                <span
                  class="badge bg-success-subtle text-success border border-success px-3 py-2 rounded-pill"
                >
                  üí∞ Best Price
                </span>
              </div>

              <div class="d-flex gap-2">
                <a
                  href="/products/<%= product._id %>/edit"
                  class="btn btn-outline-primary w-50 rounded-pill"
                  data-bs-toggle="tooltip"
                  title="Edit Product"
                >
                  ‚úèÔ∏è Edit
                </a>

                <form
                  method="post"
                  action="/products/<%= product._id %>?_method=DELETE"
                  class="w-50"
                >
                  <button
                    type="submit"
                    class="btn btn-outline-danger w-100 rounded-pill"
                    data-bs-toggle="tooltip"
                    title="Delete Product"
                  >
                    üóëÔ∏è Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <!-- Empty State -->
      <% if (products.length === 0) { %>
      <div class="text-center mt-5">
        <div class="alert alert-info py-4 rounded-4 shadow-sm">
          <i class="fa-solid fa-box-open fa-2x mb-2 text-info"></i>
          <h5 class="fw-semibold mb-1">No Products Found</h5>
          <p class="text-muted mb-3">
            Start adding new products to display them here.
          </p>
          <a href="/products/new" class="btn btn-primary rounded-pill">
            ‚ûï Add First Product
          </a>
        </div>
      </div>
      <% } %>
    </div>

